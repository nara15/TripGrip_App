<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.josemario.tripgrip_app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".PaginaPrincipalActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>

        <activity
            android:name=".BusquedaAnuncioActivity"
            android:label="@string/filtros_busqueda" >
        </activity>
        <activity
            android:name=".ResultadoBusquedaActivity"
            android:label="@string/titulo_resultado_busqueda" >
        </activity>
        <activity
            android:name=".CrearAnuncioActivity"
            android:label="@string/title_activity_crear_anuncio" >
        </activity>
        <activity
            android:name=".BuzonMensajesActivity"
            android:label="@string/title_activity_buzon_mensajes" >
        </activity>
        <activity
            android:name=".ConversacionActivity"
            android:label="@string/title_activity_conversacion" >
        </activity>
        <activity
            android:name=".VerAnuncioActivity"
            android:label="@string/title_activity_ver_anuncio" >
        </activity>
        <activity
            android:name=".MisAnunciosActivity"
            android:label="@string/title_activity_mis_anuncios" >
        </activity>
        <activity
            android:name=".VerMiAnuncioActivity"
            android:label="@string/title_activity_ver_mi_anuncio" >
        </activity>


        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    </application>

</manifest>
